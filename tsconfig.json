{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
