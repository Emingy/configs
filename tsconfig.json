{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "declaration": false,
        "sourceMap": false,

        "paths": {
            "@emingy/configs": ["lib"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
